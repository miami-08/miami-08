{
  "extends": "airbnb",
  "rules": {
    "max-len": [2, 120],
    "max-params": [2, 3],
    "object-curly-spacing": [2, "always"],
    "indent": ["error", 4],
    "react/prefer-stateless-function": "off",
    "react/jsx-indent": "off",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".jsx", ".ts", ".tsx"] }
    ]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
