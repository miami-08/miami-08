{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "declaration": false,
    "module": "esnext",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@/*": ["./src/*"],
      "ui/*": ["./ui/*"],
      "uicomponents/*": ["./ui/components/*"],
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "services/*": ["./src/services/*"],
      "api/*": ["./src/api/*"],
      "store/*": ["./src/store/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
  },
  "include": [
    "./src/**/*.ts*",
    "./ui/**/*.ts*",
    "./webpack.config.js",
    "./prettier.config.js"
  ],
  "exclude": ["**/*.js"]
}
